{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "**/*.json",
      "**/*.cjs",
      "**/*.js",
      "**/*.d.ts",
      "**/*.config.ts",
      "**/generated/*",
      "**/dist/*",
      "**/out/*",
      "**/node_modules/*",
      "**/hermes-engine/*",
      "apps/expo/ios",
      "apps/expo/android"
    ]
  },
  "formatter": {
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": [
      "**/*.json",
      "**/*.cjs",
      "**/*.js",
      "**/*.d.ts",
      "**/*.config.ts",
      "**/generated/*",
      "**/dist/*",
      "**/out/*",
      "**/node_modules/*",
      "**/hermes-engine/*",
      "apps/expo/ios",
      "apps/expo/android"
    ]
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "**/*.json",
      "**/*.cjs",
      "**/*.js",
      "**/*.d.ts",
      "**/*.config.ts",
      "**/generated/*",
      "**/dist/*",
      "**/out/*",
      "**/node_modules/*",
      "**/hermes-engine/*",
      "apps/expo/ios",
      "apps/expo/android"
    ],
    "rules": {
      "recommended": true,
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "noImplicitBoolean": "off",
        "useBlockStatements": "off",
        "useNamingConvention": "off",
        "useSingleCaseStatement": "off"
      },
      "suspicious": {
        "noShadowRestrictedNames": "off",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["assert", "error", "info", "warn"]
          }
        }
      },
      "a11y": {
        "useSemanticElements": "off",
        "useGenericFontNames": "off"
      },
      "performance": {},
      "security": {},
      "nursery": {}
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    },
    "globals": ["JSX", "expect", "describe", "beforeAll", "afterAll", "jest"],
    "jsxRuntime": "reactClassic"
  }
}
